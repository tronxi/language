load expression .
fmod ASSIGNMENT is 

    pr TYPE .
    pr MEMORY .
    pr EXPRESSION .

    sort Assig .

    op _=_ : Qid Expression -> Assig .

    var Q : Qid .
    var E : Expression .
    var M : Memory .

    op assigInMemory : Assig Memory -> Memory .
    eq assigInMemory(Q = E, M) = M [Q \ load(M, eval(E, M))] .

endfm