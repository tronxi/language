load type .

fmod EXPRESSION is 
    pr TYPE .
    sort Expression .
    subsort Type < Expression .
    op _sum_ : Expression Expression -> Expression [ctor assoc] .
    op __ : Expression Expression -> Expression [ctor assoc] .
    
    vars T T' : Type .
    var M : Memory .
    
    op sum : Expression Memory -> Type .
    eq sum (T sum T', M) = load(M,T) + load(M,T') .
    eq sum (T, M) = T [owise].


endfm
